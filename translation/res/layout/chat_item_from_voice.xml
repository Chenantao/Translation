<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/x5">

    <TextView
        android:id="@+id/tv_postTime"
        style="@style/font1_gray_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2015-7-4 16:04:00"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.gdxz.zhongbao.client.view.customView.RoundImageView
                android:id="@+id/iv_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/head"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x5">

                <FrameLayout
                    android:id="@+id/fl_voice_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/chatfrom_bg_normal"
                    >

                    <ImageView
                        android:id="@+id/iv_recorder_anim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/adj"/>
                </FrameLayout>
                <TextView
                    android:layout_toRightOf="@id/fl_voice_wrap"
                    android:id="@+id/tv_recorder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:text="111"
                    android:textColor="#ff777777"/>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_author"
            style="@style/font1_gray_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x3"
            android:text="狗晴"/>
    </LinearLayout>

</LinearLayout>