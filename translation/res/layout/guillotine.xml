<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/guillotine_background"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_general_journal"
        android:background="@drawable/change_selector"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_profile"/>

        <com.gdxz.zhongbao.client.view.customView.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="流水账"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_enchashment"
        android:background="@drawable/change_selector"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed"/>

        <com.gdxz.zhongbao.client.view.customView.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="提现"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/change_selector"
        android:id="@+id/ll_assets_analysis"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity"/>

        <com.gdxz.zhongbao.client.view.customView.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="资产分析"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height"/>

</LinearLayout>