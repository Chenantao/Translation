<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5">

    <TextView
        android:id="@+id/tv_recorder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:text="111"
        android:textColor="#ff777777"/>

    <FrameLayout
        android:id="@+id/fl_voice_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_recorder_time"
        android:background="@drawable/voice_wrap"
        >

        <ImageView
            android:id="@+id/iv_recorder_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/adj"/>
    </FrameLayout>

</RelativeLayout>